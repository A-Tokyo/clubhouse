{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ESNext", "ES2019", "ESNext.Array"],

    "incremental": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "noEmitOnError": true,

    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "isolatedModules": true,
    "traceResolution": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": true,

    "outDir": "build",
    "baseUrl": "."
  },
  "include": ["src"]
}
